###
### Required user-supplied functions
###

zopen_pre_patch() {
  export LDFLAGS="$LDFLAGS $LIBS"
}

zopen_append_to_zoslib_env() {
  cat <<EOF
TERM|overrideset|linux
ASCII_TERMINFO|set|PROJECT_ROOT/../../ncurses/ncurses/share/terminfo/
MC_DATADIR|set|PROJECT_ROOT/share/mc
EOF
}

zopen_check_results() {
  dir="$1" 
  pfx="$2" 
  chk="$1/$2_check.log"
  # Add logic to extract the test results here:
  echo "actualFailures:0" 
  echo "totalTests:1" 
  echo "expectedFailures:0"
  echo "expectedTotalTests:1"
}

zopen_get_version() {
  echo "$MC_VERSION"
}


