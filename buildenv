###
### Required Environment Variables
###
export ZOPEN_BUILD_LINE="STABLE"
export ZOPEN_STABLE_URL="https://github.com/MidnightCommander/mc.git"
export ZOPEN_STABLE_TAG="4.8.33"
export ZOPEN_STABLE_DEPS="libtool gettext glib libssh2 make m4 perl automake autoconf tar gzip pkgconfig ncurses"
export ZOPEN_BOOTSTRAP="./autogen.sh"
export ZOPEN_DEV_URL=""
export ZOPEN_DEV_DEPS="make"
export ZOPEN_CATEGORIES="shell utilities"
export ZOPEN_EXTRA_CONFIGURE_OPTS="--disable-vfs --with-screen=ncurses"
export ZOPEN_RUNTIME_DEPS="ncurses bash"
# export ZOPEN_SYSTEM_PREREQ="zos25" # optional system pre-req (default=zos25)


